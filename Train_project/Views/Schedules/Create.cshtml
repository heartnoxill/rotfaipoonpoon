@model Train_project.Models.Schedule

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Departure_date" class="control-label">Departure Date</label>
                <input asp-for="Departure_date" class="form-control" />
                <span asp-validation-for="Departure_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckIn_time" class="control-label">Check-in Time</label>
                <input asp-for="CheckIn_time" class="form-control" />
                <span asp-validation-for="CheckIn_time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Departure_time" class="control-label">Departure Time</label>
                <input asp-for="Departure_time" class="form-control" />
                <span asp-validation-for="Departure_time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estimated_ToA" class="control-label">Estimated Time of Arrival</label>
                <input asp-for="Estimated_ToA" class="form-control" />
                <span asp-validation-for="Estimated_ToA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RouteR_id" class="control-label">Route ID</label>
                <select asp-for="RouteR_id" class ="form-control" asp-items="ViewBag.RouteR_id"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
