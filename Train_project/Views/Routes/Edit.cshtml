            <div class="form-group">
                <label asp-for="Departure_city" class="control-label">Departure City</label>
                <input asp-for="Departure_city" class="form-control" />
                <span asp-validation-for="Departure_city" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Departure_state" class="control-label">Departure State</label>
                <input asp-for="Departure_state" class="form-control" />
                <span asp-validation-for="Departure_state" class="text-danger"></span>
