@model Train_project.Models.Passenger

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Passenger</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="P_fname" class="control-label">First Name</label>
                <input asp-for="P_fname" class="form-control" />
                <span asp-validation-for="P_fname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="P_lname" class="control-label">Last Name</label>
                <input asp-for="P_lname" class="form-control" />
                <span asp-validation-for="P_lname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="P_contact" class="control-label">Contact (Phone)</label>
                <input asp-for="P_contact" class="form-control" />
                <span asp-validation-for="P_contact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="P_DOB" class="control-label">Date of Birth</label>
                <input asp-for="P_DOB" class="form-control" />
                <span asp-validation-for="P_DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prefix" class="control-label">Prefix</label>
                <input asp-for="Prefix" class="form-control" />
                <span asp-validation-for="Prefix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to Passenger Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
